<div class="container">
<h2><%= @event.name %></h2>
<h3 class="grey-text" id="event_date_run"><%= @event.date %></h3>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <input id="search" placeholder="Search" class="form-control"> 
    </div>    
  </div>
  <div class="row">
    <div class="col-md-3 offset-md-3">
      <h4>Name:</h4>
    </div>
    <div class="col-md-3">
      <h4>Attendees:</h4>
    </div>
  </div>
<% @event.groups.each do |group| %>
  <div class="row">
    <div class="col-md-3 offset-md-3">
      <ul>
        <li><%= group.user.full_name %></li>
      </ul>
    </div>
