<div class="container">
<h2>Create Event</h2>
  <div class="row">
    <div class="col-md-6 offset-md-3">
    <%= form_for(event) do |f| %>
      <% if event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
          <% event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field form-group">
        <label class="grey-text"><%= f.label :name %></label>
        <%= f.text_field :name %>
      </div>

      <div class="field form-group">
        <label class="grey-text"><%= f.label :date %></label>
        <%= f.date_select :date %>
      </div>

      <div class="field form-group">
        <label class="grey-text"><%= f.label :description %></label>
        <%= f.text_area :description %>
      </div>

      <div class="field form-group">
        <label class="grey-text"><%= f.label :allocation %></label>
        <%= f.number_field :allocation %>
      </div>
      </div>
</div>

  <div class="actions col-md-4 offset-md-4">
    <%= f.submit %>

  <% end %>
  </div> 
</div>